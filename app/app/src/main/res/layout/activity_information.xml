<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/mainBackground"
    tools:context="com.waol.trackermirror.InformationActivity">

    <RelativeLayout
        android:id="@+id/information_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="First name"
            android:id="@+id/information_name_input"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Surname"
            android:id="@+id/information_lastname_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_name_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:id="@+id/information_email_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_lastname_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Height"
            android:id="@+id/information_height_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_email_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Shoe size"
            android:id="@+id/information_shoesize_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_height_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ip address"
            android:id="@+id/information_ip_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_shoesize_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Port"
            android:id="@+id/information_port_input"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_ip_input"
            android:layout_marginTop="20dp"
            android:textColor="@color/mainTextColor"
            android:textColorHint="@color/editTextHintColor"/>

        <Button
            android:id="@+id/information_submit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Save"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/information_ip_input"
            android:layout_marginTop="30dp"
            android:textColor="@color/button_text_color"
            android:background="@drawable/circle_button_shape" />

    </RelativeLayout>
</RelativeLayout>
