<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.waol.trackermirror.InformationActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First name"
        android:id="@+id/information_name_input"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Surname"
        android:id="@+id/information_lastname_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information_name_input"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:id="@+id/information_email_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information_lastname_input"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Height"
        android:id="@+id/information_height_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information_email_input"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Shoe size"
        android:id="@+id/information_shoesize_input"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information_height_input"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/information_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/information_shoesize_input"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
